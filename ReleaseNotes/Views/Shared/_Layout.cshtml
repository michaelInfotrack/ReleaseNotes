<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/jquery-ui.min.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery-1.12.4.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.min.js")



</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script type='text/javascript'>
        $(function(){
            $('.date-picker').datepicker(
                {
                    dateFormat: 'DD dd MM yy',
                    altField: '#releaseLabel, #releaseLabelHidden',
                    altFormat: 'yymmdd'
                });          
        })

        $(function(){
            $("#releaseLabelDate").on('change', function () {
                $("#hiddenReleaseLabelDate").val(this.value);
                //$("#releaseLabelHidden").val(this.value);
            });
        })
    </script>
</body>
</html>
